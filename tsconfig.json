{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "stylight": ["./src/index.ts"],
            "stylight/react": ["./src/react/index.ts"],
            "react": [ "./node_modules/@types/react" ]
        },
        "strict": true,
        "removeComments": false,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "inlineSourceMap": true,
        "declaration": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "jsx": "react"
    },
    "include": ["./src", "./test"],
    "exclude": [
        "dist", "node_modules", ".trash",
        "./src/umd.ts", "./src/react/umd.ts",
        "./test/browser",
        "test/browser-entrypoint.tsx",
        "test/karma.conf.js"
    ]
}